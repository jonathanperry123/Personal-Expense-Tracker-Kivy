#:kivy 2.2.1
<UserInterface>:
    Label:
        id: amount_label
        text: "Amount:"
        font: "15sp"
        
        background_color: 0,1,0,1
        pos_hint: {"center_x": 0.08, "center_y":0.9}

    Label:
        id: category_label
        text: "Category:"
        font: "15sp"
        
        background_color: 0,1,0,1
        pos_hint: {"center_x": 0.08, "center_y":0.8}

    Label:
        id: planned_expense
        text: "Did you plan this expense:"
        font: "15sp"
        
        background_color: 0,1,0,1
        pos_hint: {"center_x": 0.08, "center_y":0.7}

    Label:
        id: preventable_expense
        halign:"right"
        text: "Could you have prevented this expense?:"
        font: "15sp"
        
        background_color: 0,1,0,1
        pos_hint: {"center_x": 0.08, "center_y":0.6}

    TextInput:
        id: amount_input
        size_hint: None, None
        input_filter: "float"
        height: 50
        width: 150
        multiline:False
        hint_text: "Enter Amount"
        pos_hint: {"center_x": 0.22,"center_y": 0.9}


    Button:
        id: deposit_button
        text: "Add to account"
        font_size: "15sp"
        background_color: 0,1,0,1
        size_hint: .5, .1
        pos_hint: {"center_x": .5, "center_y": .6}
        on_press: root.deposit_money()

    Button:
        id: withdrawal_button
        text: "Withdraw from account"
        font_size: "15sp"
        background_color: 1,0,0,1
        size_hint: .5, .1
        pos_hint: {"center_x": .5, "center_y": .4}
        on_press: root.withdraw_money()

    Label:
        id: balance_label
        text: "Balance: ${}".format(root.balance)
        font_size: "15sp"
        background_color: 1,0,0,1

        #Size of widgets
        size_hint: .5, .1

        #Positioning of widgets
        pos_hint: {"center_x": .5, "center_y": .2}
        